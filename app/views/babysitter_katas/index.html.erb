<div class="container">
  <div class="row">
    <div class="col-md">
      <h1>The Babysitter</h1>
      <p>Fill out the fields below. Can't arrive before 5:00 pm or leave after 4:00 am</p>
      <%= form_tag babysitter_katas_submit_form_path, method: :post, class:'col-md-4', remote: true do %>
        <div class="form-group">
          <%= label_tag "Arrival Time" %>
          <%= text_field_tag :arrival_time, nil, class:'form-control', placeholder:'Arrival Time' %>
        </div>
        <div class="form-group">
          <%= label_tag "Departure Time" %>
          <%= text_field_tag :departure_time, nil, class:'form-control', placeholder:'Departure Time' %>
        </div>
        <div class="form-group">
          <%= label_tag "Bedtime" %>
          <%= text_field_tag :bedtime, nil, class:'form-control', placeholder:'Bedtime' %>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      <% end %>
    </div>
    <div class="col-md">
      <h3>The babysitter earned: <span id="calculated-amount-id"></span></h3>
    </div>
  </div>
</div>
